<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Colors -->
  <SolidColorBrush x:Key="AppForegroundColor" Color="#ffffff" />
  <SolidColorBrush x:Key="AppBackgroundColor" Color="#339933" />

  <!-- Images -->
  <BitmapImage x:Key="AppLogoImage" UriSource="/Assets/ApplicationLogo.png"/>
  <BitmapImage x:Key="AppBackgroundImage" UriSource="/"/>

  <!-- App Background -->
  <SolidColorBrush x:Key="AppBackground" Color="#339933" />
  <SolidColorBrush x:Key="AppBackgroundPopup" Color="#339933" Opacity=".50"/>

  <!-- AppBar Background -->
  <SolidColorBrush x:Key="AppBarBackground" Color="#6d8764" />

  <!-- WP About Page -->
  <DataTemplate x:Key="PageHeaderWP">
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="80"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <Image Margin="0" Source="{StaticResource AppLogoImage}" Width="70" Height="70" VerticalAlignment="Center" />
      <TextBlock Grid.Column="1" Margin="10,0" Text="{StaticResource AppTitle}" FontSize="48" Foreground="{StaticResource AppForegroundColor}"
                 VerticalAlignment="Center" IsHitTestVisible="false" TextWrapping="NoWrap" />
    </Grid>
  </DataTemplate>
</ResourceDictionary>
